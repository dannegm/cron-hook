generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum HttpMethods {
    GET
    POST
    UPDATE
    DELETE
    PATCH
}

model Cron {
    id   String @id @default(uuid())
    logs Log[]
}

model Log {
    id     String @id @default(uuid())
    cronId String
    cron   Cron   @relation(fields: [cronId], references: [id])
}
